[cite_start]#include "roBa.dtsi" [cite: 74]

[cite_start]&default_transform { [cite: 74]
    col-offset = <6>;
};

[cite_start]&kscan0 { [cite: 75]
    col-gpios
        = <&xiao_d 10 GPIO_ACTIVE_HIGH>
        , <&xiao_d 9 GPIO_ACTIVE_HIGH>
        , <&xiao_d 8 GPIO_ACTIVE_HIGH>
        , <&xiao_d 7 GPIO_ACTIVE_HIGH>
        , <&gpio0 10 GPIO_ACTIVE_HIGH>
        ;
};

/ {
    trackball_listener {
        [cite_start]compatible = "zmk,input-listener"; [cite: 77]
        device = <&trackball>;
    };
};

&pinctrl {
    spi0_default: spi0_default {
        [cite_start]group1 { [cite: 78]
            psels = <NRF_PSEL(SPIM_SCK, 0, 5)>,
                <NRF_PSEL(SPIM_MOSI, 0, 4)>,
                <NRF_PSEL(SPIM_MISO, 0, 4)>;
        };
    };

    spi0_sleep: spi0_sleep {
        [cite_start]group1 { [cite: 79]
            psels = <NRF_PSEL(SPIM_SCK, 0, 5)>,
                <NRF_PSEL(SPIM_MOSI, 0, 4)>,
                <NRF_PSEL(SPIM_MISO, 0, 4)>;
            low-power-enable;
        };
    };
};

&xiao_serial { status = "disabled"; };

&spi0 {
    [cite_start]status = "okay"; [cite: 80]
    compatible = "nordic,nrf-spim";
    pinctrl-0 = <&spi0_default>;
    pinctrl-1 = <&spi0_sleep>;
    pinctrl-names = "default", "sleep";
    cs-gpios = <&gpio0 9 GPIO_ACTIVE_LOW>;
    trackball: trackball@0 {
        status = "okay";
        [cite_start]compatible = "pixart,pmw3610"; [cite: 81]
        reg = <0>;
        [cite_start]spi-max-frequency = <2000000>; [cite: 82]
        irq-gpios = <&gpio0 2 (GPIO_ACTIVE_LOW | GPIO_PULL_UP)>;
        automouse-layer = <4>;
        scroll-layers = <5>;
    };
};

&hid0 {
    [cite_start]compatible = "zmk,hid"; [cite: 83]
    [cite_start]usb-default-interface = "hid"; [cite: 83]
    [cite_start]keymap-type = "jp"; [cite: 83]
};

